{
  "name": "ecolearn-auth",
  "version": "1.0.0",
  "description": "🔐 EcoLearn Authentication - Green computing authentication system untuk platform pembelajaran digital business",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js",
    "lint": "eslint assets/js --ext .js",
    "format": "prettier --write .",
    "validate": "node scripts/validate.js",
    "carbon-check": "node scripts/carbon-check.js",
    "deploy": "node scripts/deploy.js"
  },
  "keywords": [
    "ecolearn",
    "authentication",
    "green-computing",
    "education",
    "micro-frontend",
    "vanilla-js",
    "carbon-tracking",
    "sustainability",
    "digital-business",
    "akademi-digital-bandung"
  ],
  "author": {
    "name": "Akademi Digital Bandung",
    "email": "dev@digitalbdg.ac.id",
    "url": "https://digitalbdg.ac.id"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adbecolearn/ecolearn-auth.git"
  },
  "bugs": {
    "url": "https://github.com/adbecolearn/ecolearn-auth/issues"
  },
  "homepage": "https://adbecolearn.github.io/ecolearn-auth/",
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "terser": "^5.0.0",
    "cssnano": "^6.0.0",
    "postcss": "^8.0.0",
    "autoprefixer": "^10.0.0"
  },
  "dependencies": {
    "ecolearn-shared": "https://adbecolearn.github.io/ecolearn-shared/"
  },
  "files": [
    "index.html",
    "assets/",
    "README.md"
  ],
  "eco": {
    "carbonBudget": "0.5g",
    "performanceTarget": "< 2s",
    "bundleSize": "< 50KB",
    "dependencies": {
      "shared": "https://adbecolearn.github.io/ecolearn-shared/"
    }
  },
  "features": {
    "authentication": {
      "login": true,
      "register": true,
      "forgotPassword": true,
      "passwordStrength": true,
      "realTimeValidation": true
    },
    "greenComputing": {
      "carbonTracking": true,
      "performanceMonitoring": true,
      "energyOptimization": true
    },
    "accessibility": {
      "keyboardNavigation": true,
      "screenReader": true,
      "highContrast": true,
      "reducedMotion": true
    },
    "responsive": {
      "mobile": true,
      "tablet": true,
      "desktop": true
    }
  },
  "funding": {
    "type": "institutional",
    "url": "https://digitalbdg.ac.id/research/ecolearn"
  }
}
